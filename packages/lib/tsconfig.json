{
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./jest.config.js",
    "./node_modules",
    "./build",
  ],
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",                           
    "module": "CommonJS",                               
    "rootDir": "./src",                                
    "moduleResolution": "node",                     
    "allowJs": true,                                 
    "outDir": "./build",
    "isolatedModules": true,                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,      
    "strict": true,                                  
    "skipLibCheck": true,       
  }
}